{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "VidSynth: Debug Server (FastAPI)",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "uvicorn",
            "args": [
                "vidsynth.server.app:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "VidSynth: 视频切分 (带自定义参数)",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "vidsynth.cli",
            "args": [
                "segment-video",
                "assets/raw/Summer_vacation.mp4",
                "--video-id",
                "test_video3",
                "--embedding-preset",
                "cpu-small"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "VidSynth: 主题匹配 (match-theme)",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "vidsynth.cli",
            "args": [
                "match-theme",
                "output/clips_Summer_vacation.json",
                "sand beach",
                "--output",
                "output/sand_beach_scores.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "VidSynth: Sequence Clips",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "vidsynth.cli",
            "args": [
                "sequence-clips",
                "output/clips_Summer_vacation.json",
                "output/sand_beach_scores.json",
                "--output",
                "output/edl_sand_beach.json",
                "--upper",
                "0.12",
                "--lower",
                "0.10"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "VidSynth: Export EDL",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "vidsynth.cli",
            "args": [
                "export-edl",
                "output/edl_sand_beach.json",
                "assets/raw/Summer_vacation.mp4",
                "--output",
                "output/output_sand_beach.mp4"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
